    <!-- TV overrides for text appearances: larger sizes for 10ft UI -->
    <style name="TextAppearance.Oblivion.DisplayLarge" parent="TextAppearance.Material3.DisplayLarge">
        <item name="fontFamily">@font/shabnambold</item>
        <item name="android:fontFamily">@font/shabnambold</item>
        <item name="android:textSize">48sp</item>
    </style>
    <style name="TextAppearance.Oblivion.TitleMedium" parent="TextAppearance.Material3.TitleMedium">
        <item name="fontFamily">@font/shabnammedium</item>
        <item name="android:fontFamily">@font/shabnammedium</item>
        <item name="android:textSize">22sp</item>
    </style>
    <style name="TextAppearance.Oblivion.BodyLarge" parent="TextAppearance.Material3.BodyLarge">
        <item name="fontFamily">@font/shabnam</item>
        <item name="android:fontFamily">@font/shabnam</item>
        <item name="android:textSize">20sp</item>
    </style>
    <style name="TextAppearance.Oblivion.LabelLarge" parent="TextAppearance.Material3.LabelLarge">
        <item name="fontFamily">@font/shabnammedium</item>
        <item name="android:fontFamily">@font/shabnammedium</item>
        <item name="android:textSize">18sp</item>
    </style>
