<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="?attr/colorSurface"
        android:fitsSystemWindows="true"
        tools:context="org.bepass.oblivion.ui.MainActivity">

        <org.bepass.oblivion.component.Icon
            android:id="@+id/info_icon"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:background="?selectableItemBackgroundBorderless"
            android:clickable="true"
            android:contentDescription="@string/aboutApp"
            android:focusable="true"
            android:padding="12dp"
            android:src="@drawable/ic_info"
            app:icon_color="?attr/colorOnSurface"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <org.bepass.oblivion.component.Icon
            android:id="@+id/setting_icon"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:background="?selectableItemBackgroundBorderless"
            android:clickable="true"
            android:contentDescription="@string/settingsText"
            android:focusable="true"
            android:padding="12dp"
            android:src="@drawable/ic_settings"
            app:icon_color="?attr/colorOnSurface"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <org.bepass.oblivion.component.Icon
            android:id="@+id/bug_icon"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginEnd="8dp"
            android:background="?selectableItemBackgroundBorderless"
            android:clickable="true"
            android:contentDescription="@string/logApp"
            android:focusable="true"
            android:padding="12dp"
            android:src="@drawable/ic_bug"
            app:icon_color="?attr/colorOnSurface"
            app:layout_constraintBottom_toBottomOf="@id/setting_icon"
            app:layout_constraintEnd_toStartOf="@id/setting_icon"
            app:layout_constraintTop_toTopOf="@id/setting_icon" />

        <TextView
            android:id="@+id/app_name_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:text="@string/app_name"
            android:textAllCaps="true"
            android:textAppearance="@style/TextAppearance.Oblivion.DisplayLarge"
            android:textColor="?attr/colorOnSurface"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/info_icon"
            app:layout_constraintVertical_chainStyle="packed" />

        <TextView
            android:id="@+id/app_name_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="@string/basedOnWarp"
            android:textAppearance="@style/TextAppearance.Oblivion.TitleMedium"
            android:textColor="?attr/colorPrimary"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/app_name_1" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline_center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.55" />

        <View
            android:id="@+id/switch_background_effect"
            android:layout_width="160dp"
            android:layout_height="80dp"
            android:background="@drawable/switch_ripple"
            android:visibility="visible"
            app:layout_constraintBottom_toBottomOf="@+id/switch_button"
            app:layout_constraintEnd_toEndOf="@+id/switch_button"
            app:layout_constraintStart_toStartOf="@+id/switch_button"
            app:layout_constraintTop_toTopOf="@+id/switch_button" />

        <org.bepass.oblivion.component.TouchAwareSwitch
            android:id="@+id/switch_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:contentDescription="@string/stateText"
            android:focusable="true"
            android:minWidth="100dp"
            android:minHeight="48dp"
            android:scaleX="1.5"
            android:scaleY="1.5"
            app:layout_constraintBottom_toTopOf="@id/guideline_center"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/app_name_2"
            app:layout_constraintVertical_bias="0.6"
            app:thumbTint="?attr/colorPrimary"
            app:trackTint="@color/gray" />

        <TextView
            android:id="@+id/state_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="@string/stateText"
            android:textAppearance="@style/TextAppearance.Oblivion.TitleMedium"
            android:textColor="?attr/colorOnSurfaceVariant"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/switch_button" />

        <TextView
            android:id="@+id/publicIP"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/space_xl"
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.Oblivion.BodyLarge"
            android:textColor="?attr/colorOnSurfaceVariant"
            android:textStyle="bold"
            android:visibility="invisible"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/state_text"
            tools:text="192.168.1.1"
            tools:visibility="visible" />

        <com.google.android.material.progressindicator.CircularProgressIndicator
            android:id="@+id/ipProgressBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:indeterminate="true"
            android:visibility="invisible"
            app:indicatorSize="36dp"
            app:layout_constraintBottom_toBottomOf="@id/publicIP"
            app:layout_constraintEnd_toEndOf="@id/publicIP"
            app:layout_constraintStart_toStartOf="@id/publicIP"
            app:layout_constraintTop_toTopOf="@id/publicIP"
            app:trackThickness="4dp" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/floatingActionButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="24dp"
            android:layout_marginBottom="24dp"
            android:clickable="true"
            android:contentDescription="@string/select_language"
            android:focusable="true"
            android:src="@drawable/ic_translate"
            app:backgroundTint="?attr/colorPrimary"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:tint="?attr/colorOnPrimary" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>